[Unit]
Description=Service which ingests concepts from the queue
After=vulcan.service
Requires=docker.service
Wants=concept-ingester-red-sidekick@%i.service

[Service]
Environment="DOCKER_APP_VERSION=latest"
Environment="PORT=8080"
Environment="TOPIC=Concept"
Environment="GROUP_ID=RedConcepts"
Environment="QUEUE_ID=kafka"
TimeoutStartSec=0
# Change killmode from "control-group" to "none" to let Docker remove work correctly.
KillMode=none
ExecStartPre=-/bin/bash -c '/usr/bin/docker kill "$(docker ps -q --filter=name=%p-%i_)" > /dev/null 2>&1'
ExecStartPre=-/bin/bash -c '/usr/bin/docker rm "$(docker ps -q --filter=name=%p-%i_)" > /dev/null 2>&1'
ExecStartPre=/bin/bash -c 'docker history coco/concept-ingester:$DOCKER_APP_VERSION > /dev/null 2>&1 || docker pull coco/concept-ingester:$DOCKER_APP_VERSION'

ExecStart=/bin/sh -c '\
  export ENV=$(/usr/bin/etcdctl get /ft/config/environment_tag); \
  export VULCAN_ADDR=http://%H:8080; \
  export SERVICES=people-rw-neo4j-red,organisations-rw-neo4j-red,memberships-rw-neo4j-red,brands-rw-neo4j-red,roles-rw-neo4j-red,alphaville-series-rw-neo4j-red,financial-instruments-rw-neo4j-red,special-reports-rw-neo4j-red,locations-rw-neo4j-red,genres-rw-neo4j-red,topics-rw-neo4j-red,sections-rw-neo4j-red,subjects-rw-neo4j-red,industry-classifications-rw-neo4j-red; \
  export GRAPHITE_TCP_ADDRESS=graphite.ft.com:2003; \
  export GRAPHITE_PREFIX=coco.services.$ENV.concept-ingester-red.%i; \
  export OFFSET=largest; \
  export COMMIT_ENABLE=true; \
  export STREAM_COUNT=1; \
  export TIMEOUT=60; \
  export KAFKA_ADDRS=$(etcdctl get /ft/config/kafka/ip); \
  /usr/bin/docker run --rm --name %p-%i_$(uuidgen) \
  --memory="256m" \
  -p $PORT \
  -e "PORT=$PORT" \
  -e "VULCAN_ADDR=$VULCAN_ADDR" \
  -e "GROUP_ID=$GROUP_ID" \
  -e "TOPIC=$TOPIC" \
  -e "SERVICES=$SERVICES" \
  -e "QUEUE_ID=$QUEUE_ID" \
  -e "GRAPHITE_TCP_ADDRESS=$GRAPHITE_TCP_ADDRESS" \
  -e "GRAPHITE_PREFIX=$GRAPHITE_PREFIX" \
  -e "OFFSET=$OFFSET" \
  -e "COMMIT_ENABLE=$COMMIT_ENABLE" \
  -e "STREAM_COUNT=$STREAM_COUNT" \
  -e "TIMEOUT=$TIMEOUT" \
  coco/concept-ingester:$DOCKER_APP_VERSION;'
ExecStop=-/bin/bash -c 'docker stop -t 3 "$(docker ps -q --filter=name=%p-%i_)"'
Restart=on-failure
RestartSec=60

[X-Fleet]
Conflicts=%p@*.service
