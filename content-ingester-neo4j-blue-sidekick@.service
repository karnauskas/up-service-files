[Unit]
Description=Content Ingester Neo4j Blue Sidekick
BindsTo=content-ingester-neo4j-blue@%i.service
After=content-ingester-neo4j-blue@%i.service

[Service]
RemainAfterExit=yes
ExecStart=/bin/sh -c "\
  export SERVICE=$(echo %p | sed 's/-sidekick//g'); \
  etcdctl set   /ft/services/$SERVICE/healthcheck     true; \
  etcdctl mkdir /ft/services/$SERVICE/servers; \
  etcdctl set /ft/healthcheck/$SERVICE-%i/path /__health; \
  while [ -z $PORT ]; do \
    sleep 5; \
    PORT=`echo $(/usr/bin/docker port $SERVICE-%i 8080 | cut -d':' -f2)`; \
  done; \
  etcdctl set /ft/services/$SERVICE/servers/%i http://%H:$PORT;"
  
ExecStop=/usr/bin/etcdctl rm /ft/services/content-ingester-neo4j-blue/servers/%i

[X-Fleet]
MachineOf=content-ingester-neo4j-blue@%i.service

