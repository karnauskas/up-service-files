[Unit]
Description=new-notifications-push Sidekick
BindsTo=new-notifications-push@%i.service
After=new-notifications-push@%i.service

[Service]
RemainAfterExit=yes
ExecStart=/bin/sh -c "\
  export SERVICE=$(echo %p | sed 's/-sidekick//g'); \
  etcdctl set /ft/services/$SERVICE/healthcheck true; \
  etcdctl mkdir /ft/services/$SERVICE/servers; \
  etcdctl set /ft/healthcheck/$SERVICE-%i/path /__health; \
  NOTIFICATIONS_PUSH_PORT=8548; \
  etcdctl set /ft/services/$SERVICE/servers/%i http://%H:$NOTIFICATIONS_PUSH_PORT;"

ExecStop=-/bin/bash -c '/usr/bin/etcdctl rm /ft/services/new-notifications-push/servers/%i'
Restart=on-failure
RestartSec=60

[X-Fleet]
MachineOf=new-notifications-push@%i.service
