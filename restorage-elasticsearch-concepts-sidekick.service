[Unit]
Description=Restorage elasticsearch concepts sidekick
BindsTo=restorage-elasticsearch-concepts.service
After=restorage-elasticsearch-concepts.service

[Service]
ExecStartPre=/bin/sh -c "\
  etcdctl set   /ft/services/restorage-elasticsearch-concepts/healthcheck     true \
  etcdctl mkdir /ft/services/restorage-elasticsearch-concepts/servers"

ExecStart=/bin/sh -c "\
   while true; do \
    PORT=`[ $PORT ] && echo $PORT || echo $(/usr/bin/docker port restorage-elasticsearch-concepts 8080 | cut -d':' -f2)`; \
    etcdctl set /ft/services/restorage-elasticsearch-concepts/servers/3 "http://$HOSTNAME:$PORT" --ttl 600; \
    sleep 120; \
  done"
ExecStop=/usr/bin/etcdctl rm /ft/services/restorage-elasticsearch-concepts/servers/3
Restart=on-failure
RestartSec=60

[X-Fleet]
MachineOf=restorage-elasticsearch-concepts.service
