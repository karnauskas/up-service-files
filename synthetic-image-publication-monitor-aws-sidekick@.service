[Unit]
Description=Synthetic Image Publication Monitor AWS Sidekick
BindsTo=synthetic-image-publication-monitor-aws@%i.service
After=synthetic-image-publication-monitor-aws@%i.service

[Service]
RemainAfterExit=yes
ExecStart=/bin/sh -c "\
  export SERVICE=$(echo %p | sed 's/-sidekick//g'); \
  etcdctl set /vulcand/backends/$SERVICE/backend '{\"Type\": \"http\"}'; \
  etcdctl set /vulcand/backends/$SERVICE-%i/backend '{\"Type\": \"http\"}'; \
  etcdctl set /vulcand/frontends/$SERVICE/frontend '{\"Type\": \"http\", \"BackendId\": \"synthetic-image-publication-monitor-aws\", \"Route\": \"PathRegexp(`/.*`) && Host(`syn-pub-aws`)\"}'; \
  etcdctl set /vulcand/frontends/$SERVICE-health-%i/frontend '{\"Type\":\"http\", \"BackendId\":\"synthetic-image-publication-monitor-aws-%i\", \"Route\":\"PathRegexp(`/health/synthetic-image-publication-monitor-aws-%i/.*`)\"}'; \
  etcdctl set /vulcand/frontends/$SERVICE-health-%i/middlewares/rewrite '{\"Id\":\"rewrite\", \"Type\":\"rewrite\", \"Priority\":1, \"Middleware\": {\"Regexp\":\"/health/synthetic-image-publication-monitor-aws-%i(.*)\", \"Replacement\":\"$1\"}}'; \
  etcdctl set /ft/healthcheck/$SERVICE-%i/path /__health; \
  while [ -z $PORT ]; do \
     sleep 5; \
     CONTAINER_NAME=$(docker ps -q --filter=name=\"$SERVICE\"-%i_); \
     PORT=`echo $(/usr/bin/docker port $CONTAINER_NAME 8080 | cut -d':' -f2)`; \
  done; \
  etcdctl set /vulcand/backends/$SERVICE/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$PORT\\\"}\" --ttl 600; \
  etcdctl set /vulcand/backends/$SERVICE-%i/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$PORT\\\"}\" --ttl 600;"

ExecStop=-/bin/bash -c 'etcdctl rm --recursive /vulcand/backends/synthetic-image-publication-monitor-aws/servers/srv%i'
ExecStop=-/bin/bash -c 'etcdctl rm --recursive /vulcand/backends/synthetic-image-publication-monitor-aws-%i/servers/srv%i'

[X-Fleet]
MachineOf=synthetic-image-publication-monitor-aws@%i.service
