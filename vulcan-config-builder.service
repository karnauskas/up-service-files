[Unit]
Description=Vulcand configuration builder.
Requires=docker.socket
After=docker.socket

[Service]
Environment="DOCKER_APP_VERSION=latest"
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/bin/sh -c "docker history coco/vulcan-config-builder:$DOCKER_APP_VERSION >/dev/null 2>&1 || docker pull coco/vulcan-config-builder:$DOCKER_APP_VERSION"
ExecStart=/bin/sh -c "/usr/bin/docker run --rm --name=%p -P -e="VCB_ETCD_PEERS=http://$HOSTNAME:2379" coco/vulcan-config-builder:$DOCKER_APP_VERSION"
ExecStopPost=-/usr/bin/docker rm -f %p
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target

