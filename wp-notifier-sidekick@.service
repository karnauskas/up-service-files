[Unit]
Description=Wordpress Notifier Sidekick
BindsTo=wp-notifier@%i.service
After=wp-notifier@%i.service

[Service]
ExecStart=/bin/sh -c "\
  etcdctl set /vulcand/backends/wp-notifier/backend '{\"Type\": \"http\"}' ; \
  etcdctl set /vulcand/frontends/wp-notifier/frontend '{\"Type\": \"http\", \"BackendId\": \"wp-notifier\", \"Route\": \"PathRegexp(`/.*`) && Host(`wp-notifier`)\"}'; \
  \
  etcdctl set /vulcand/frontends/wp-notifier-health/frontend \"{\\\"Type\\\":\\\"http\\\", \\\"BackendId\\\":\\\"wp-notifier\\\", \\\"Route\\\":\\\"Path(\`/health/wp-notifier/__health\`)\\\"}\"; \
  etcdctl set /vulcand/frontends/wp-notifier-health/middlewares/rewrite \"{\\\"Id\\\":\\\"rewrite\\\", \\\"Type\\\":\\\"rewrite\\\", \\\"Priority\\\":1, \\\"Middleware\\\": {\\\"Regexp\\\":\\\"/health/wp-notifier(.*)\\\", \\\"Replacement\\\":\\\"\$1\\\"}}\"; \
  \
  while true; do \
    export WP_NOTIFIER_PORT=$(/usr/bin/docker port wp-notifier-%i 8080 | cut -d':' -f2); \
    etcdctl set /services/wp-notifier/%i/host '%H' --ttl 60; \
    etcdctl set /services/wp-notifier/%i/app_port $(echo $(/usr/bin/docker port wp-notifier-%i 8080) | cut -d':' -f2) --ttl 60; \
    etcdctl set /services/wp-notifier/%i/admin_port $(echo $(/usr/bin/docker port wp-notifier-%i 8081) | cut -d':' -f2) --ttl 60; \
    etcdctl set /services/wp-notifier/%i/healthcheck /__health --ttl 60; \
    etcdctl set /vulcand/backends/wp-notifier/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$WP_NOTIFIER_PORT\\\"}\" --ttl 60; \
    sleep 45; \
  done"

ExecStop=/usr/bin/etcdctl rm --recursive /services/wp-notifier/%i
ExecStop=/usr/bin/etcdctl rm /vulcand/backends/wp-notifier/servers/srv%i

[X-Fleet]
MachineOf=wp-notifier@%i.service
