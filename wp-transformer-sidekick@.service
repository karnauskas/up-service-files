[Unit]
Description=wp-transformer Sidekick
BindsTo=wp-transformer@%i.service
After=wp-transformer@%i.service

[Service]
ExecStart=/bin/sh -c "\
  etcdctl set /vulcand/backends/wp-transformer/backend '{\"Type\": \"http\"}' ; \
  etcdctl set /vulcand/frontends/wp-transformer/frontend \"{\\\"Type\\\": \\\"http\\\", \\\"BackendId\\\": \\\"wp-transformer\\\", \\\"Route\\\": \\\"PathRegexp(\`/.*\`) && Host(\`wp-transformer\`)\\\"}\" ; \
  \
  etcdctl set /vulcand/frontends/wp-transformer-health/frontend \"{\\\"Type\\\":\\\"http\\\", \\\"BackendId\\\":\\\"wp-transformer\\\", \\\"Route\\\":\\\"Path(\`/health/wp-transformer/__health\`)\\\"}\"; \
  etcdctl set /vulcand/frontends/wp-transformer-health/middlewares/rewrite \"{\\\"Id\\\":\\\"rewrite\\\", \\\"Type\\\":\\\"rewrite\\\", \\\"Priority\\\":1, \\\"Middleware\\\": {\\\"Regexp\\\":\\\"/health/wp-transformer(.*)\\\", \\\"Replacement\\\":\\\"\$1\\\"}}\"; \
  \
  while true; do \
    export WP_TRANSFORMER_PORT=$(echo $(/usr/bin/docker port wp-transformer-%i 8080) | cut -d':' -f2); \
    etcdctl set /services/wp-transformer/%i/host '%H' --ttl 60; \
    etcdctl set /services/wp-transformer/%i/app_port $(echo $(/usr/bin/docker port wp-transformer-%i 8080) | cut -d':' -f2) --ttl 60; \
    etcdctl set /services/wp-transformer/%i/admin_port $(echo $(/usr/bin/docker port wp-transformer-%i 8081) | cut -d':' -f2) --ttl 60; \
    etcdctl set /services/wp-transformer/%i/healthcheck/path /__health --ttl 60; \
    etcdctl set /services/wp-transformer/%i/healthcheck/categories default --ttl 60; \
    etcdctl set /vulcand/backends/wp-transformer/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$WP_TRANSFORMER_PORT\\\"}\" --ttl 60; \
    sleep 45; \
  done"
ExecStop=/usr/bin/etcdctl rm --recursive /services/wp-transformer/%i
ExecStop=/usr/bin/etcdctl rm /vulcand/backends/wp-transformer/servers/srv%i

[X-Fleet]
MachineOf=wp-transformer@%i.service
